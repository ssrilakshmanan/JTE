pipeline {
	agent any
	tools {
		maven "maven-3.9.8"
	}
	environment {
	    WORKER_SIZE = "0.1"
	}
    parameters {
       choice choices: ['dev','qa','stage','trn'], description: 'Pick a build Environment', name: 'buildEnv'
    }
	stages {
	    stage ('Init') {
		    steps {
			    script {
					def envMap = [
						"dev": [
							"CH_ENV": "DEV",
							"name": "foo"
						],
						"qa": [
							"CH_ENV": "QA",
							"name": "bar"
						],
						"trn": [
							"CH_ENV": "SIT:TRN",
							"name": "foo"
						]
					]
					
					yaml = readYaml file: "${WORKSPACE}/src/main/resources/properties/${params.buildEnv}.yaml"
					if (binding.hasVariable('yaml.WORKER_SIZE')) {
					   WORKER_SIZE = yaml.WORKER_SIZE
					}
				}
			}
		}
        stage('Build') { 
            steps { 
                echo 'Build'
				//bat 'mvn -s C:/Users/ssrilakshmanan/.m2/settings.xml clean test'
				echo "Workspace -- ${WORKSPACE}"
				echo dev.CH_ENV
				echo "Build Env - ${params.buildEnv}"
				script {
				   echo "CloudHub env " + evaluate("envMap.${params.buildEnv}.CH_ENV")
 			       //if (params.buildEnv.equals("dev")){ echo "CloudHub env DEV"}
				   //if (params.buildEnv.equals("trn")){ echo "CloudHub env SIT:TRN"}
				   //def yaml = readYAML file: "C:/tools/Jenkins-buildagent/workspace/sgsTest_main/src/main/resources/properties/dev.yaml"
				}
            }
        }
        stage('Test'){
            steps {
                echo 'Test' 
            }
        }
        stage('Deploy') {
            steps {
				echo "Deploying..."
				echo yaml.deployName
				echo "Worker Size ${WORKER_SIZE}"
            }
        }
    }
}