pipeline {
	agent any
	tools {
		maven "maven-3.9.8"
	}
	stages {
        stage('Build') { 
            steps { 
                echo 'Build'
				bat 'mvn --version'
            }
        }
        stage('Test'){
            steps {
                echo 'Test' 
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploy' 
            }
        }
    }
}